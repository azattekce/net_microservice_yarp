{
  "ReverseProxy": {
    "Routes": {
      "catalog": {
        "ClusterId": "catalogCluster",
        "Match": { "Path": "/catalog/{**catch-all}" }
      },
      "order": {
        "ClusterId": "orderCluster",
        "Match": { "Path": "/order/{**catch-all}" }
      }
    },
    "Clusters": {
      "catalogCluster": {
        "Destinations": {
          "d1": { "Address": "http://catalog-api" }
        }
      },
      "orderCluster": {
        "Destinations": {
          "d1": { "Address": "http://order-api" }
        }
      }
    }
  }
}
