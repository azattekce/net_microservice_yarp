{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
    ]
  },
  "ReverseProxy": {
    "Routes": {
      "catalog": {
        "ClusterId": "catalogCluster",
        "Match": { "Path": "/api/catalog/{**catch-all}" }
      },
      "order": {
        "ClusterId": "orderCluster",
        "Match": { "Path": "/api/order/{**catch-all}" }
      }
    },
    "Clusters": {
      "catalogCluster": {
        "Destinations": {
          "d1": { "Address": "http://host.docker.internal:5001" }
        }
      },
      "orderCluster": {
        "Destinations": {
          "d1": { "Address": "http://host.docker.internal:5002" }
        }
      }
    }
  }
}
